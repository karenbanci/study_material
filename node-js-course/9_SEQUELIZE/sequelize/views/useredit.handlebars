<h1>Editando: {{user.name}}</h1>

<form action="/users/update" method="POST" class="form">
  <input type="hidden" name="id" value="{{user.id}}">
  <div class="" form-control>
    <label for="name">Nome</label>
    <input type="text" name="name" placeholder="Nome do usuário" value="{{user.name}}">
  </div>
  <div class="form-control">
    <label for="email">Occuppation</label>
    <input type="text" name="occupation" placeholder="Digite a profissão" value="{{user.occupation}}">
  </div>
  <div class="form-control form-checkbox">
    {{#if user.newsletter}}
    <input type="checkbox" name="newsletter" placeholder="Digite a profissão" checked>
    {{else}}
    <input type="checkbox" name="newsletter" placeholder="Digite a profissão">
    {{/if}}
    <label for="newsletter">Enviar Promoções?</label>
  </div>
  <input type="submit" value="Editar">

</form>
