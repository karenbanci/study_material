<h1>Editando: {{user.name}}</h1>

<form action="/users/update" method="POST" class="form">
  <input type="hidden" name="id" value="{{user.id}}">
  <div class="" form-control>
    <label for="name">Nome</label>
    <input type="text" name="name" placeholder="Nome do usuário" value="{{user.name}}">
  </div>
  <div class="form-control">
    <label for="email">Occuppation</label>
    <input type="text" name="occupation" placeholder="Digite a profissão" value="{{user.occupation}}">
  </div>
  <div class="form-control form-checkbox">
    {{#if user.newsletter}}
    <input type="checkbox" name="newsletter" placeholder="Digite a profissão" checked>
    {{else}}
    <input type="checkbox" name="newsletter" placeholder="Digite a profissão">
    {{/if}}
    <label for="newsletter">Enviar Promoções?</label>
  </div>
  <input type="submit" value="Editar">
</form>
<div class="address-container">
  <h2>Endereço</h2>
  <form action="/address/create" method="POST" class="form">
    <input type="hidden" name="UserId" value="{{user.id}}">
    <div class="form-control">
      <label for="street">Rua</label>
      <input type="text" name="street" placeholder="Digite a rua:" value="{{user.address.street}}">
    </div>
    <div class="form-control">
      <label for="number">Número</label>
      <input type="text" name="number" placeholder="Digite o número da residência:" value="{{user.address.number}}">
    </div>
    <div class="form-control">
      <label for="city">Cidade</label>
      <input type="text" name="city" placeholder="Digite a cidade" value="{{user.address.city}}">
    </div>
    <input type="submit" value="Incluir Endereço">
  </form>
  <div class="address-list">
    <h2>Lista de endereço</h2>
    {{#each user.Addresses}}
    <div class="address-item">
      <div>
        #{{this.id}} -
        Rua: {{this.street}} -
        Número: {{this.number}}-
        Cidade: {{this.city}}
        <form action="/address/delete" method="POST">
          <input type="hidden" name="UserId" value="{{this.UserId}}">
          <input type="hidden" name="id" value="{{this.id}}">
          <input type="submit" value="Excluir">
        </form>
      </div>
      {{/each}}
    </div>
  </div>
